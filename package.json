{
  "name": "dashdot-cli",
  "version": "2.1.0",
  "description": "dash. - a modern server dashboard",
  "scripts": {
    "build": "tsc -b && (cd ./frontend && yarn build)",
    "start": "(cd ./backend && yarn start)",
    "start-dev": "docker-compose -p dashdot_dev -f ./docker-compose.yml up --remove-orphans",
    "dev": "DEFAULT_INTERFACE_PATH=$(readlink -f /sys/class/net/$(ip addr show | awk '/inet.*brd/{print $NF; exit}')) yarn run start-dev",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "17.0.35",
    "prettier": "2.6.2",
    "semantic-release": "19.0.2",
    "typescript": "4.7.2"
  },
  "workspaces": [
    "shared",
    "frontend",
    "backend"
  ],
  "repository": "https://github.com/MauriceNino/dashdot",
  "homepage": "https://github.com/MauriceNino/dashdot#readme",
  "author": "MauriceNino <mauriceprivat98@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@3.2.1",
  "bugs": {
    "url": "https://github.com/MauriceNino/dashdot/issues"
  },
  "keywords": [
    "monitoring",
    "dashboard",
    "server",
    "glassmorphism"
  ]
}
